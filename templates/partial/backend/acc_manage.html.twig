{% extends 'dashboard.html.twig' %}

{% block content %}
<h3 class="mt-3">使用者帳號管理</h3>
<div class="row mb-5">
    <div class="col-12 col-sm-12 col-md-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover table-fixed text-center">
                    <thead>
                        <tr>
                            <th style="width:100px;">編號ID</th>
                            <th style="width:300px;">帳號</th>
                            <th style="width:400px;">密碼</th>
                            <th>使用者代稱</th>
                            <th>功能</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in user %}
                        <tr>
                            <td class="align-middle" ">{{item.no}}</td>
                            <td class="align-middle">{{item.acc}}</td>
                            <td class="align-middle">{{item.pwd}} </td>
                            <td class="align-middle">{{item.user_name}}</td>
                            <td class="align-middle">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="switch.php?mode=edit&id={{item.no}}" class="btn btn-sm btn-warning">編輯</a>
                                <a class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-id="{{ item.id }}">刪除</a>
                            </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}