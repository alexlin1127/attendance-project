    <!-- 新增數據按鈕 -->
    <div class="col-md-2 col-sm-4 mb-3">
      <a href="switch.php?mode=add_data" class="btn btn-info w-100">新增數據</a>
    </div>

    <!-- 建立使用者按鈕 -->
    <div class="col-md-2 col-sm-4 mb-3">
      <a href="switch.php?mode=add_user" class="btn btn-secondary w-100">建立使用者</a>
